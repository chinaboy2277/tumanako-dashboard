<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/layoutMain"
              android:orientation="vertical"     
              android:keepScreenOn="true"          
              android:layout_width="fill_parent"  android:layout_height="fill_parent"  >    


    
    
    
    
    
    
 <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="horizontal"  android:layout_weight="0">
 
  <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="vertical" android:layout_weight="1">
    <com.tumanako.ui.StatusLamp  android:id="@+id/lampData"  
                                 android:layout_width="80dp"  android:layout_height="40dp" 
                                 app:on_bitmap="@drawable/data_on"
                                 app:off_bitmap="@drawable/data_off"  />
    <com.tumanako.ui.StatusLamp  android:id="@+id/lampGPS"  
                                 android:layout_width="80dp"  android:layout_height="40dp"  
                                 app:on_bitmap="@drawable/gps_on"
                                 app:off_bitmap="@drawable/gps_off"  />   
  </LinearLayout>

  <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="vertical" android:layout_weight="1">
    <com.tumanako.ui.StatusLamp  android:id="@+id/lampContactor"  
                                 android:layout_width="80dp"  android:layout_height="80dp"
                                 app:on_bitmap="@drawable/contactor_on"
                                 app:off_bitmap="@drawable/contactor_off"  />   
  </LinearLayout>
  <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="vertical" android:layout_weight="1">
  <com.tumanako.ui.StatusLamp  android:id="@+id/lampFault"  
                               android:layout_width="80dp"  android:layout_height="80dp" 
                               app:on_bitmap="@drawable/fault_on"
                               app:off_bitmap="@drawable/fault_off"  />   
  </LinearLayout>
 </LinearLayout>
    

 
 
 
 

 
  <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="horizontal"  android:gravity="center"  android:layout_weight="1">
       <com.tumanako.ui.Dial android:id="@+id/demoDial"
                 android:layout_width="165dp"
                 android:layout_height="100dp"
                 android:background="@drawable/dial_bg"  />
  </LinearLayout>
 
 
 
  
 
  <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="horizontal"  android:gravity="right|center_vertical"  android:layout_weight="1">
     <com.tumanako.ui.TextWithLabel android:id="@+id/textMainBatteryKWh"
                 android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_weight="1"
                 android:gravity="center_horizontal"
                 android:textSize="24pt"  />
 </LinearLayout>
 
 
 
 
 
 
 
 
 
  <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="horizontal"  android:layout_weight="1" android:divider="#FFFFFFFF" >

    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="vertical" android:gravity="top|center_horizontal" android:layout_weight="1">         

      <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"  android:gravity="center"
                android:textSize="10pt"
                android:text="@string/stringAccecessory" />
        
      <com.tumanako.ui.TextWithLabel android:id="@+id/textAccBatteryVlts"
                 android:layout_width="wrap_content"  android:layout_height="wrap_content"
                 android:gravity="center_horizontal"
                 android:textSize="14pt"  />

    </LinearLayout>

    
    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="vertical" android:gravity="center" android:layout_weight="1">      
    
      <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"  android:gravity="center"
                android:textSize="10pt"
                android:text="@string/stringPrecharge" />
        
      <com.tumanako.ui.StatusLamp  android:id="@+id/lampGreenGlobe"  
                                   android:layout_width="30dp"  android:layout_height="30dp"
                                   app:on_bitmap="@drawable/greenglobe_on"
                                   app:off_bitmap="@drawable/greenglobe_off"  />
         
    </LinearLayout>
    
    
  </LinearLayout>
      

  
  
  
  
  
  <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="horizontal"  android:layout_weight="0">
      

      <LinearLayout android:background="@drawable/round_border" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="vertical" android:gravity="top|center_horizontal" android:layout_weight="1">

          <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center"
                    android:textSize="10pt"
                    android:text="@string/stringMotor" />
         
          <com.tumanako.ui.TextWithLabel android:id="@+id/textTMotor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_horizontal"
                 android:textSize="14pt"  />
         
      </LinearLayout>
      
      
      <LinearLayout android:background="@drawable/round_border" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="vertical" android:gravity="top|center_horizontal" android:layout_weight="1">         

          <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center"
                    android:textSize="10pt"
                    android:text="@string/stringController" />
          
          <com.tumanako.ui.TextWithLabel android:id="@+id/textTController"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_horizontal"
                 android:textSize="14pt"  />
          
      </LinearLayout>
      
      
      <LinearLayout android:background="@drawable/round_border" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="vertical" android:gravity="top|center_horizontal" android:layout_weight="1">         

          <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center"
                    android:textSize="10pt"
                    android:text="@string/stringBattery" />
      
        <com.tumanako.ui.TextWithLabel android:id="@+id/textTBattery"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_horizontal"
                 android:textSize="14pt"  />
        
      </LinearLayout>
               
  </LinearLayout>
    
  
  
     
   
  
  
  
          
      
      
</LinearLayout>
