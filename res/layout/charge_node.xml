<?xml version="1.0" encoding="utf-8"?>

<!-- PORTRAIT Layout!! -->

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tumanako.ui"
    android:id="@+id/layoutChaqrgeNode"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp" >

    <WebView
        android:id="@+id/webChargeNodeContent"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45" />

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >
        
        <Button
            android:id="@+id/buttonConnectToNode"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.34"
            android:text="Connect" />

        <Button
            android:id="@+id/buttonChargeStart"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:text="START Charge" />

        <Button
            android:id="@+id/buttonChargeStop"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:text="STOP Charge" />        
        
    </LinearLayout>

    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_border"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Charge Rate:"
                android:textSize="10pt" />

            <com.tumanako.ui.TextWithLabel
                android:id="@+id/textChargeCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:textSize="18pt"
                app:label_text=" A "
                app:main_text="00.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_border"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Transferred:"
                android:textSize="10pt" />

            <com.tumanako.ui.TextWithLabel
                android:id="@+id/textChargeAH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18pt"
                app:label_text=" AH "
                app:main_text="00.0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>