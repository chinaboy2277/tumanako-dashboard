<?xml version="1.0" encoding="utf-8"?>

<!-- LANDSCAPE Layout!! -->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/layoutPrimaryData"
              android:orientation="vertical"     
              android:layout_width="fill_parent"  android:layout_height="fill_parent">    


    
    
    
    
 <FrameLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:padding="2dp" >
          
      <com.tumanako.ui.Dial android:id="@+id/dialMotorRPM"
                 android:layout_width="200dp"
                 android:layout_height="120dp"
                 android:background="@drawable/dial_bg"
                 android:layout_gravity="bottom|left"
                 app:minimum_scale="0" 
                 app:scale_step="1"
                 app:number_divisions="5"
                 app:scale_tick_step="0.5"
                 app:scale_tick_size="3"
                 app:minimum_angle="-90"
                 app:maximum_angle="50"
                 app:origin_x="0.5"
                 app:origin_y="0.85"
                 app:needle_length="0.4"
                 app:gauge_label="x1000/min"
                 app:label_x="0.6"
                 app:label_y="0.6" 
                 app:label_format="%.0f" 
                 app:colours="FF404040,FFA0A0A0,FF404040,FFA0A0A0,FF404040,FFDBB893,FFDF7401,FFFFA58C,FFFF3700,FFFF0000" />    
                   
     <com.tumanako.ui.Dial android:id="@+id/dialMainBatteryKWh"
                 android:layout_width="200dp"
                 android:layout_height="120dp"
                 android:background="@drawable/dial_bg"
                 android:layout_gravity="bottom|right"
                 app:minimum_scale="0" 
                 app:scale_step="10"
                 app:number_divisions="4"
                 app:scale_tick_step="5"
                 app:scale_tick_size="3"
                 app:minimum_angle="-90"
                 app:maximum_angle="50"
                 app:origin_x="0.5"
                 app:origin_y="0.85"
                 app:needle_length="0.4"
                 app:gauge_label="kWh"
                 app:label_x="0.6"
                 app:label_y="0.6" 
                 app:label_format="%.0f"
                 app:colours="FFFF0000,FFFF0000,FFDF7401,FFDF7401,FF00D0+00,FF00D000,FF00D000,FF00D000,FF00D000,FF00D000" />    
    <com.tumanako.ui.StatusLamp  android:id="@+id/lampContactor"  
                                 android:layout_width="60dp"  android:layout_height="60dp"
                                 android:layout_gravity="top|center"
                                 app:on_bitmap="@drawable/contactor_on"
                                 app:off_bitmap="@drawable/contactor_off"
                                 app:initial_status="off"  />
    <com.tumanako.ui.StatusLamp  android:id="@+id/lampFault"  
                                 android:layout_width="60dp"  android:layout_height="60dp"
                                 android:layout_gravity="bottom|center" 
                                 app:on_bitmap="@drawable/fault_on"
                                 app:off_bitmap="@drawable/fault_off"
                                 app:initial_status="on"  />
   </FrameLayout>              
    
 
 
 
 
  <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="horizontal" android:gravity="center">
      
 
    <LinearLayout android:layout_width="wrap_content"  android:layout_height="fill_parent"  android:orientation="vertical" android:gravity="center">
       <com.tumanako.ui.StatusLamp  android:id="@+id/lampData"  
                                 android:layout_width="60dp"  android:layout_height="30dp"
                                 app:on_bitmap="@drawable/data_on"
                                 app:off_bitmap="@drawable/data_off"
                                 app:initial_status="off"  />
      <com.tumanako.ui.StatusLamp  android:id="@+id/lampGPS"  
                                 android:layout_width="60dp"  android:layout_height="30dp"
                                 app:on_bitmap="@drawable/gps_on"
                                 app:off_bitmap="@drawable/gps_off"
                                 app:initial_status="off"  />
    </LinearLayout>
      

    <LinearLayout android:layout_width="fill_parent"  android:layout_height="fill_parent"  android:orientation="vertical" android:gravity="center">     

      <com.tumanako.ui.BarGauge android:id="@+id/barTMotor"
                 android:layout_width="fill_parent"
                 android:layout_height="40dp"
                 android:background="@drawable/bezel"
                 android:layout_margin="3dp"
                 app:minimum_scale="20" 
                 app:scale_step="10"
                 app:number_divisions="9"
                 app:scale_tick_step="5"
                 app:label_format="%.0f" 
                 app:gauge_label="Mtr °C"
                 app:label_x="0.22"
                 app:label_y="0.75"
                 app:origin_x="0.25"
                 app:origin_y="0.90"
                 app:orientation="horizontal"
                 app:scale_position="left"
                 app:bar_across="0.4"
                 app:bar_long="0.70"
                 app:segment_gap="2"
                 app:show_scale="true"                 
                 app:colours="FF3ADF00,FF3ADF00,FF74DF00,FF74DF00,FFA5DF00,FFA5DF00,FFD7DF01,FFD7DF01,FFDBA901,FFDBA901,FFDF7401,FFDF7401,FFDF3A01,FFDF3A01,FFFF4000,FFFF4000,FFFF0000,FFFF0000,FFFF0000,FFFF0000" />

      <com.tumanako.ui.BarGauge android:id="@+id/barTController"
                 android:layout_width="fill_parent"
                 android:layout_height="20dp"
                 android:background="@drawable/bezel"
                 android:layout_margin="3dp"
                 app:minimum_scale="20" 
                 app:scale_step="10"
                 app:number_divisions="9"
                 app:scale_tick_step="5"
                 app:label_format="%.0f" 
                 app:gauge_label="Cntl °C"
                 app:label_x="0.22"
                 app:label_y="0.75"
                 app:origin_x="0.25"
                 app:origin_y="0.90"
                 app:orientation="horizontal"
                 app:scale_position="left"
                 app:bar_across="0.8"
                 app:bar_long="0.70"
                 app:segment_gap="2"
                 app:show_scale="false"                 
                 app:colours="FF3ADF00,FF3ADF00,FF74DF00,FF74DF00,FFA5DF00,FFA5DF00,FFD7DF01,FFD7DF01,FFDBA901,FFDBA901,FFDF7401,FFDF7401,FFDF3A01,FFDF3A01,FFFF4000,FFFF4000,FFFF0000,FFFF0000,FFFF0000,FFFF0000" />
 
       <com.tumanako.ui.BarGauge android:id="@+id/barTBattery"
                 android:layout_width="fill_parent"
                 android:layout_height="20dp"
                 android:background="@drawable/bezel"
                 android:layout_margin="3dp"                 
                 app:minimum_scale="20" 
                 app:scale_step="10"
                 app:number_divisions="9"
                 app:scale_tick_step="5"
                 app:label_format="%.0f" 
                 app:gauge_label="Bat °C"
                 app:label_x="0.22"
                 app:label_y="0.75"
                 app:origin_x="0.25"
                 app:origin_y="0.90"
                 app:orientation="horizontal"
                 app:scale_position="left"
                 app:bar_across="0.8"
                 app:bar_long="0.70"
                 app:segment_gap="2"
                 app:show_scale="false"                 
                 app:colours="FF3ADF00,FF3ADF00,FF74DF00,FF74DF00,FFA5DF00,FFA5DF00,FFD7DF01,FFD7DF01,FFDBA901,FFDBA901,FFDF7401,FFDF7401,FFDF3A01,FFDF3A01,FFFF4000,FFFF4000,FFFF0000,FFFF0000,FFFF0000,FFFF0000" />
     
   </LinearLayout>

    
  </LinearLayout>
   
      
         
      
      
</LinearLayout>
